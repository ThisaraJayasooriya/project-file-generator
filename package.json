{
  "name": "project-file-generator",
  "displayName": "MERN Project File Generator",
  "description": "Accelerate MERN stack development with automatic module generation - controllers, routes, models, and React components with proper structure and boilerplate",
  "version": "1.0.1",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Snippets",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "mern",
    "react",
    "express",
    "mongodb",
    "nodejs",
    "typescript",
    "generator",
    "boilerplate",
    "mvc",
    "component"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
  "commands": [
    {
      "command": "projectFileGenerator.createBackendModule",
      "title": "Create Backend Module"
    },
    {
      "command": "projectFileGenerator.createReactComponent",
      "title": "Create React Component"
    }
  ],
  "menus": {
    "explorer/context": [
      {
        "command": "projectFileGenerator.createBackendModule",
        "when": "explorerResourceIsFolder",
        "group": "2_workspace"
      },
      {
        "command": "projectFileGenerator.createReactComponent",
        "when": "explorerResourceIsFolder",
        "group": "2_workspace"
      }
    ]
  }
},
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.109.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.54.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  },
  "license": "MIT",
  "publisher": "ThisaraJayasooriya",
  "icon": "images/icon.png"
}
